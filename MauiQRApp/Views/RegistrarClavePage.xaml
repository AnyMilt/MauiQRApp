<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiQRApp.Views.RegistrarClavePage"
             BackgroundColor="#F5F7FA"
             Title="Registrar Nueva Clave">

    <VerticalStackLayout Padding="30" Spacing="25">

        <!-- SustituciÃ³n de Frame por Border -->
        <Border StrokeShape="RoundRectangle 20"
                BackgroundColor="White"
                Padding="25">

            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.25"
                        Radius="10"
                        Offset="5,5"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="20">
                <Label Text="Registrar Nueva Clave"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#1E3A8A"/>

                <Entry x:Name="txtClave"
                       Placeholder="Ingrese nueva clave"
                       FontSize="16"
                       ClearButtonVisibility="WhileEditing"/>

                <Button Text="ðŸ’¾ Guardar Clave"
                        BackgroundColor="#3B82F6"
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="50"
                        Clicked="OnGuardarClicked"/>
            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>
</ContentPage>
